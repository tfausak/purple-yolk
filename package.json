{
  "//": "https://code.visualstudio.com/api/references/extension-manifest",
  "activationEvents": [
    "onCommand:purple-yolk.restart",
    "onCommand:purple-yolk:showOutput",
    "onLanguage:haskell"
  ],
  "badges": [
    {
      "description": "Build status",
      "href": "https://travis-ci.org/tfausak/purple-yolk",
      "url": "https://travis-ci.org/tfausak/purple-yolk.svg?branch=master"
    }
  ],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "commands": [
      {
        "category": "Purple Yolk",
        "command": "purple-yolk.restart",
        "title": "Restart"
      },
      {
        "category": "Purple Yolk",
        "command": "purple-yolk.showOutput",
        "title": "Show output"
      }
    ],
    "configuration": {
      "properties": {
        "purple-yolk.ghci.command": {
          "default": "stack --color never --no-terminal ghci --ghc-options '-ddump-json -j -O0' --main-is base --test",
          "description": "The command to start GHCi.",
          "type": "string"
        }
      },
      "title": "Purple Yolk"
    },
    "grammars": [
      {
        "language": "cabal",
        "path": "grammars/cabal-grammar.json",
        "scopeName": "source.cabal"
      },
      {
        "language": "haskell",
        "path": "grammars/haskell-grammar.json",
        "scopeName": "source.haskell"
      }
    ],
    "languages": [
      {
        "aliases": [
          "Cabal"
        ],
        "configuration": "languages/cabal-language.json",
        "extensions": [
          ".cabal"
        ],
        "id": "cabal"
      },
      {
        "aliases": [
          "Haskell"
        ],
        "configuration": "languages/haskell-language.json",
        "extensions": [
          ".hs"
        ],
        "id": "haskell"
      }
    ],
    "snippets": [
      {
        "language": "cabal",
        "path": "snippets/cabal-snippets.json"
      },
      {
        "language": "haskell",
        "path": "snippets/haskell-snippets.json"
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.3",
    "vscode-languageserver": "^6.1.1"
  },
  "description": "A Haskell IDE.",
  "devDependencies": {
    "eslint-loader": "^4.0.2",
    "eslint": "^7.10.0",
    "vsce": "^1.80.0",
    "webpack-cli": "^3.3.12",
    "webpack": "^4.44.1"
  },
  "displayName": "Purple Yolk",
  "keywords": [
    "haskell"
  ],
  "engines": {
    "node": "^14.11.0",
    "npm": "^6.14.8",
    "vscode": "^1.49.2"
  },
  "homepage": "https://github.com/tfausak/purple-yolk",
  "icon": "images/purple-yolk.png",
  "license": "ISC",
  "main": "dist/client.js",
  "name": "purple-yolk",
  "publisher": "taylorfausak",
  "repository": {
    "type": "git",
    "url": "https://github.com/tfausak/purple-yolk.git"
  },
  "scripts": {
    "eslint": "eslint",
    "vsce": "vsce",
    "vscode:prepublish": "webpack -p",
    "webpack": "webpack"
  },
  "version": "0.1.2"
}
